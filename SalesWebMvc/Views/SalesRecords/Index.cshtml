@{
    ViewData["Title"] = "Sales Records";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <fieldset class="border p-3 rounded mb-4">
                <legend class="float-none w-auto px-2 fs-5">
                    Simple Search
                </legend>

                <div class="mb-3">
                    <label for="minDate" class="form-label">Min Date</label>
                    <input type="date" name="minDate" id="minDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="maxDate" class="form-label">Max Date</label>
                    <input type="date" name="maxDate" id="maxDate" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset class="border p-3 rounded">
                <legend class="float-none w-auto px-2 fs-5">
                    Grouping Search
                </legend>

                <div class="mb-3">
                    <label for="minDateGroup" class="form-label">Min Date</label>
                    <input type="date" name="minDate" id="minDateGroup" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="maxDateGroup" class="form-label">Max Date</label>
                    <input type="date" name="maxDate" id="maxDateGroup" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
            </fieldset>
        </form>
    </div>
</div>
